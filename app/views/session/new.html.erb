<div class='topnav'>
  <%= link_to "Home", root_path %>
</div>

<header class="text-center">
  <h1>Login to Viewing Party</h1>
</header>

<section>
  <div class="container p-3 my-3 border">
    <%= form_with url: login_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :email, 'Email:' %>
        <%= form.email_field :email, {class:"form-control", placeholder:"Enter Email"} %>
      </div>
      <div class="form-group">
        <%= form.label :password, 'Password:' %>
        <%= form.password_field :password, {class:"form-control", placeholder:"Enter Password"} %>
      </div>
      <div class="container">
        <div class="row">
          <div class="col text-center">
            <%= form.submit 'Login', class:"btn btn-outline-success" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>